<!-- views/createWorkout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Workout</title>
</head>
<body>
    <h1>Create Workout</h1>
    <form action="/workouts" method="post">
        <label for="exerciseName">Exercise Name:</label>
        <input type="text" id="exerciseName" name="exercises[0][name]" required>
        <br>
        <label for="exerciseCategory">Category:</label>
        <input type="text" id="exerciseCategory" name="exercises[0][category]" required>
        <br>
        <label for="exerciseDuration">Duration (minutes):</label>
        <input type="number" id="exerciseDuration" name="exercises[0][duration]" required>
        <br>
        <button type="submit">Create Workout</button>
    </form>
</body>
</html>
